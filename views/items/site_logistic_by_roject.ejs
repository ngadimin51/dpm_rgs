	<%- include('../partial/header') %>

</head>
<body>
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
        
		<%- include('../partial/app-header') %>
        <%- include('../partial/ui-theme-setting') %>
		
        <div class="app-main">

			<%- include('../partial/menu') %>

            <div id="test" class="app-main__outer">
                <div class="app-main__inner">

                    <%- include('../partial/app-page-title') %>

                    <div class="row">
                        <% if (locals.pekerjaan.length > 0) { %>
                            <% for (i = 0; i < pekerjaan.length; i++) { %>

                                <div class="col-md-4">
                                    <a href="/items_control/site_logistic?project=<%= pekerjaan[i].project %>&pekerjaan=<%= pekerjaan[i].pekerjaan %>">
                                        <div class="card mb-3 widget-content bg-vicious-stance">
                                            <div class="widget-content-wrapper text-dark">
                                                <div class="widget-content-left">
                                                    <div class="widget-heading">
                                                        <button class="mb-2 mr-2 btn btn-danger">
                                                            <%= pekerjaan[i].pekerjaan %>
                                                            <!--span class="badge badge-pill badge-light"><%= pekerjaan[i].total %></span-->
                                                        </button>
                                                    </div>
                                                </div>
                                                <div class="widget-content-right">
                                                    <div class="widget-numbers text-white">
                                                        <i class="fas fa-box shadow"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                
                            <% } %>
                        <% } else { %>

                            <div class="col-md-12 col-xl-12">
                                <div class="card mb-3 widget-content" style="height: 120px;">
                                    <div class="widget-content-outer text-center">
                                        Tidak ada Project Dalam Database Anda<br>
                                        Hubungi management untuk penugasan Project
                                    </div>
                                </div>
                            </div>
                            
                        <% } %>
                    </div>

                </div>

                <%- include('../partial/footer') %>

            </div>

        </div>
    </div>
</body>
</html>
