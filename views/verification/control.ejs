                                                        <td class="align-top"><%= ver[i].ver_type %></td>
                                                        <td id="<%= ver[i].ver_id+'-project' %>" class="align-top"><%= ver[i].project %></td>
                                                        <td class="align-top">
                                                            <a href="/purchase_orders?project=<%= ver[i].project%>&po_number=<%= ver[i].ver_number %>" class="font-weight-bold">
                                                                <%= ver[i].ver_number %>
                                                            </a>
                                                        </td>
                                                        <td id="<%= ver[i].ver_id+'-status' %>" class="align-top"><%= arrayStatusVerification[ver[i].ver_status] %></td>
                                                        <td id="<%= ver[i].ver_id+'-key' %>" class="align-top"><%= ver[i].ver_key %></td>
                                                        <td class="align-top"><%= ver[i].ver_message_1 %></td>
                                                        <td id="<%= ver[i].ver_id+'-message-2' %>" class="align-top"><%= ver[i].ver_message_2 %></td>
                                                        <td class="text-center align-top" style="width: 150px;">
                                                            <button class="btn btn-primary update-ver" data-id="<%= ver[i].ver_id %>" data-status="<%= ver[i].ver_status %>" data-key="<%= ver[i].ver_key %>" data-po="<%= ver[i].ver_number %>" style="width: 35px;">
                                                                <i class="fas fa-edit"></i>
                                                            </button>
