                <script src="/assets/vendors/qrcode/qrcode.min.js"></script>
                <script>

                    $('.table').dataTable()

                    $(document).on('click', '.update-ver', function() {
                        const id = $(this).attr('data-id')
                        const status = $(this).attr('data-status')
                        const key = $(this).attr('data-key')
                        const po = $(this).attr('data-po')
                        const project = $('#'+id+'-project').html()
                        swal.fire({
                            icon: 'warning',
                            title: 'UPDATE VERIFICATION',
                            html: `PO NOMOR : ${po}<br>Project: ${project}<br><br>
                            <select name="status" class="form-control">
                                <option value="0" ${0 == status ? 'selected' : ''}>Pengajuan</option>
                                <option value="1" ${1 == status ? 'selected' : ''}>Revisi</option>
                                <option value="2" ${2 == status ? 'selected' : ''}>Approve</option>
                            </select>
                            <textarea name="message_2" class="form-control" placeholder="pesan/catatan"></textarea>`,
                            confirmButtonText: 'SUBMIT',
                            showCancelButton: true,
                            preConfirm: () => {
                                const newStatus = document.querySelector('[name="status"]').value
                                const pesan = document.querySelector('[name="message_2"]').value
                                if (status == newStatus) return swal.showValidationMessage('Status lama dan status perubahan sama<br>Tidak bisa melakukan proses')
                                if (status != newStatus && pesan != '') return {newStatus, pesan}
                                swal.showValidationMessage('Pesan wajib diisi')
                            }
                        }).then( e => {
                            if (e.isConfirmed) {
                                const data = {id: id, newStatus: e.value.newStatus, pesan: e.value.pesan}
                                putData('/verification_control/approval', data)
                                .then( response => {
                                    if (response.status == 'success') {
                                        if (response.newStatus == 0) {
                                            var status = 'Pengajuan'
                                        } else if (response.newStatus == 1) {
                                            var status = 'Revisi'
                                        } else if (response.newStatus == 2) {
                                            var status = 'Approve'
                                        } else {
                                            var status = 'Error'
                                        }
                                        $(this).attr('data-status', response.newStatus)
                                        $('#'+id+'-status').html(status)
                                        $('#'+id+'-key').html(response.key)
                                        $('#'+id+'-message-2').html(response.pesan)
                                        toastSuccess('Berhasil update Database')
                                    } else {
                                        toastFailed(response.message)
                                    }
                                })
                            }
                        })
                    })

                    $(document).on('click', '.get-qr', async function() {
                        const id = $(this).attr('data-id')
                        const type = $(this).attr('data-type')
                        const number = $(this).attr('data-number')
                        const key = $('#'+id+'-key').html()

                        let link = `https://dpm.rgsinergi.co.id/verification?type=${type}&number=${number}&key=${key}`
                        //link = link.replace(/\&/g, '%26')

                        
                        if (key) {
                            swal.fire({
                                width: 340,
                                html: `<div id="qrcode" class="d-flex justify-content-center"></div>`,
                                showConfirmButton: false
                            })
                            //var qrcode = new QRCode("qrcode");
                            var qrcode = new QRCode("qrcode", {
                                text: link,
                                width: 300,
                                height: 300,
                                colorDark : "#000000",
                                colorLight : "#ffffff",
                                correctLevel : QRCode.CorrectLevel.H
                            });
                            qrcode.makeCode(link)
                            console.log(link)
                            /*
                            await fetch(`https://chart.googleapis.com/chart?cht=qr&chs=400x400&chl=${link}&chld=h`)
                            .then((response) => {
                                response
                                    .arrayBuffer()
                                        .then((buffer) => {
                                            var base64Flag = 'data:image/jpeg;base64,'
                                            var imageStr = arrayBufferToBase64(buffer)
                                            var img = base64Flag + imageStr
                                            setTimeout(()=>{
                                                $('#qrcode').attr('src', img)
                                            }, 2000)
                                        })
                                        .catch( err => {
                                            console.log(err)
                                        } )
                            })
                            .catch (err => {
                                console.log(err)
                            })
                            */
                        } else {
                            toastFailed('Tidak ada QRCODE')
                        }
                    })

                    function arrayBufferToBase64(buffer) {
                        var binary = '';
                        var bytes = [].slice.call(new Uint8Array(buffer));

                        bytes.forEach((b) => binary += String.fromCharCode(b));

                        return window.btoa(binary);
                    }

                </script>

